<Window x:Class="_03_StackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_StackPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button VerticalAlignment="Bottom">StackPanel VerticalAlignment="Bottom"</Button>
            <Button VerticalAlignment="Center">StackPanel VerticalAlignment="Center"</Button>
            <Button VerticalAlignment="Top">StackPanel VerticalAlignment="Top"</Button>
        </StackPanel>
    </Grid>
</Window>