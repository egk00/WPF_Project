<Window x:Class="_10_WPF_Show_ShowDialog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_10_WPF_Show_ShowDialog"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Show Button" Margin="5"
                    x:Name="btn_Show_Button" 
                    Click="Btn_Show_Button_Click">
            </Button>
            <Button Content="Show Dialog Button" Margin="5"
                    x:Name="btn_ShowDialog_Button"
                    Click="Btn_ShowDialog_Button_Click">
            </Button>
        </StackPanel>
    </Grid>
</Window>
