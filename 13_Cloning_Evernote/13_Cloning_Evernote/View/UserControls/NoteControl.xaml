<UserControl x:Class="_13_Cloning_Evernote.View.UserControls.NoteControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_13_Cloning_Evernote.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400">
    <StackPanel Margin="20">
        <TextBlock x:Name="titleTextBlock"
                   Text="Note title"
                   FontSize="15"
                   FontWeight="Bold"/>

        <TextBlock x:Name="editedTextBlock"
                   Text="19 minutes"
                   FontSize="12"
                   Margin="0 10 0 0"
                   Foreground="DodgerBlue"/>
        <TextBlock x:Name="contentTextBlock"
                   Text="qw;elk;lqwkel;kqwl;kel;kqw;lekqw
                   wqek;wqkel;kqwl;kel;kqw;lke;lqwkel;qwkle;kqw
                   qek;lqwk;lekqlw"
                   FontSize="12"
                   Foreground="DarkGray"
                   TextWrapping="Wrap"/>
    </StackPanel>
</UserControl>
