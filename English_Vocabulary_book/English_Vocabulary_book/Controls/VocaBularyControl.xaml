<UserControl x:Class="English_Vocabulary_book.Controls.VocaBularyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:English_Vocabulary_book.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="300">
    <Grid Background="#AAE0E0E0">
        <StackPanel Margin="10">
            <TextBlock FontSize="20"
                       FontWeight="Bold"
                       Text="단어"
                       x:Name="word_textblock"/>
            <TextBlock FontSize="15"
                       Foreground="#16A085"
                       Text="(품사)"
                       x:Name="partsOfSpech_textblock"/>
            <TextBlock FontSize="15"
                       FontStyle="Italic"
                       Text="의미"
                       x:Name="mean_textblock"/>
        </StackPanel>
    </Grid>
</UserControl>
